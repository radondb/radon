        a int,
        b int,
        c char(10),
        unique key a_idx(a) using btree comment 'unique',
        fulltext index c_idx(c) KEY_BLOCK_SIZE=10 WITH PARSER ngram
        ) ENGINE=InnoDB DEFAULT CHARSET=utf8;
show create table integrate_test.t;
